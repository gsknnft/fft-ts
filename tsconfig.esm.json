{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist/esm",
    "declarationDir": "dist/esm/types",
    "target": "esnext",
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "src/types",
      "../../src/types",
      "node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build", "dist/types"]
}